# ======================================
# CONFIGURACIÓN DE COOPEENORTOL
# ======================================

# Entorno de ejecución
NODE_ENV=development

# Configuración del servidor
PORT=5000

# ======================================
# BASE DE DATOS POSTGRESQL
# ======================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=coopeenortol_db
DB_USER=coopeenortol_user
DB_PASSWORD=Coope2024!
DB_MAX_CONNECTIONS=50

# ======================================
# REDIS PARA SESIONES Y CACHÉ
# ======================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=Coope2024Redis!

# ======================================
# CONFIGURACIÓN DE SEGURIDAD
# ======================================
# Generar con: openssl rand -hex 32
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui_32_caracteres_minimo
JWT_EXPIRES_IN=24h

# Secret para sesiones (puede ser igual al JWT_SECRET)
SESSION_SECRET=tu_session_secret_muy_seguro_aqui

# ======================================
# CONFIGURACIÓN DE EMAIL
# ======================================
# Configurar según tu proveedor de email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_de_aplicacion

# Información del remitente
FROM_EMAIL=noreply@coopeenortol.com
FROM_NAME=Coopeenortol

# ======================================
# CONFIGURACIÓN DE ARCHIVOS
# ======================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# ======================================
# CONFIGURACIÓN DE CORS
# ======================================
# En desarrollo se permiten localhost automáticamente
# En producción, especificar dominios permitidos separados por comas
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# IP pública del servidor (para CORS automático en producción)
PUBLIC_IP=

# ======================================
# CONFIGURACIÓN DE APIs EXTERNAS
# ======================================
# API para conversión de monedas (opcional)
EXCHANGE_RATE_API_KEY=tu_api_key_aqui

# ======================================
# CONFIGURACIÓN DE LOGS Y MONITOREO
# ======================================
# Nivel de logs (error, warn, info, debug)
LOG_LEVEL=info

# Habilitar logs de consultas SQL (solo desarrollo)
LOG_SQL_QUERIES=false

# ======================================
# CONFIGURACIÓN DE BACKUP
# ======================================
# Directorio para backups automáticos
BACKUP_DIR=./backups

# Retener backups por X días
BACKUP_RETENTION_DAYS=30

# ======================================
# CONFIGURACIÓN DE RATE LIMITING
# ======================================
# Peticiones por ventana de tiempo para API general
RATE_LIMIT_MAX=500

# Peticiones por ventana para endpoints de autenticación
AUTH_RATE_LIMIT_MAX=50

# Duración de la ventana en minutos
RATE_LIMIT_WINDOW_MINUTES=15

# ======================================
# CONFIGURACIÓN ESPECÍFICA DE COOPERATIVA
# ======================================
# Nombre de la cooperativa
COOPERATIVA_NOMBRE=Coopeenortol

# NIT de la cooperativa
COOPERATIVA_NIT=

# Dirección de la cooperativa
COOPERATIVA_DIRECCION=

# Teléfono de la cooperativa
COOPERATIVA_TELEFONO=

# Email institucional
COOPERATIVA_EMAIL=info@coopeenortol.com

# ======================================
# CONFIGURACIÓN DE DESARROLLO
# ======================================
# Habilitar endpoint de debug (solo desarrollo)
ENABLE_DEBUG_ENDPOINTS=true

# Habilitar recarga automática de configuración
ENABLE_HOT_RELOAD=true

# ======================================
# NOTAS IMPORTANTES
# ======================================
# 1. Nunca commitear este archivo con datos reales al repositorio
# 2. Usar contraseñas seguras de al menos 32 caracteres
# 3. En producción, configurar HTTPS y ajustar CORS apropiadamente
# 4. Cambiar todas las contraseñas por defecto antes del primer uso
# 5. Configurar backups automáticos de base de datos
# 6. Monitorear logs regularmente para detectar intentos de acceso no autorizado